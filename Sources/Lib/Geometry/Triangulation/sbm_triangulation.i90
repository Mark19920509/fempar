subroutine triangulation_process_parameters(this, parameters)
  implicit none
  class(triangulation_t), intent(inout) :: this
  type(parameterlist_t) , intent(in)    :: parameters
  integer(ip) :: istat
  
  assert (parameters%isPresent(triang_identify_disconn_components_key))
  assert(parameters%isAssignable(triang_identify_disconn_components_key, this%identify_disconn_components))
  istat = parameters%Get(key = triang_identify_disconn_components_key, value = this%identify_disconn_components)
  assert(istat==0)
  
  if (this%identify_disconn_components) then
    assert (parameters%isPresent(triang_identify_disconn_components_dgraph_coupling_key))
    assert (parameters%isAssignable(triang_identify_disconn_components_dgraph_coupling_key,"string"))
    istat = parameters%GetAsString(key = triang_identify_disconn_components_dgraph_coupling_key, string = this%identify_disconn_components_dgraph_coupling) 
    assert(istat==0)
  else 
    ! Initialize identify_disconn_components_dgraph_coupling with a dummy string.
    ! When this%identify_disconn_components is .false, this member variable is not
    ! actually consumed. However, the INTEL Fortran compiler with DEBUG (check) flags activated requires 
    ! that this member variable is allocated (as it is passed as an actual argument to a dummy argument
    ! which does not have the allocatable attribute)
    this%identify_disconn_components_dgraph_coupling = ""
  end if 
end subroutine triangulation_process_parameters

